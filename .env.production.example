# Database Configuration
DATABASE_URL="postgresql://username:password@host:port/database?schema=authsvc"
DIRECT_URL="postgresql://username:password@host:port/database?schema=authsvc"

# JWT Configuration
JWT_SECRET="your-super-secure-jwt-secret-key-here"
JWT_ISSUER="nexus-auth-service"
JWT_AUDIENCE="nexus-platform"
REFRESH_TOKEN_SECRET="your-super-secure-refresh-token-secret"

